{
  "name": "changelog-test",
  "version": "0.0.0-development",
  "description": "Test repository for different types of changelog generator packages",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^20",
    "npm": "^9"
  },
    "husky": {
      "hooks": {
        "prepare-commit-msg": "echo $HUSKY_GIT_PARAMS",
                "commit-msg": "node script.js || commitlint -E HUSKY_GIT_PARAMS"
      }
    },
  "workspaces": [
    "./packages/*",
    "main"
  ],
  "author": "Irina Illustrova",
  "repository": {
    "type": "git",
    "url": "https://github.com/Illustrova/changelog-test.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "husky": "3.1.0",
    "semantic-release-github-pullrequest": "^1.3.0",
    "semantic-release-plus": "^20.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
